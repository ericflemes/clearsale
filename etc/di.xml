<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Clearsale\Integration\Observer\ClearsaleObserver">
        <arguments>
            <argument name="clearsaleobserver" xsi:type="object">ClearsaleTotalObserver</argument>
        </arguments>
    </type>
    <type name="Clearsale\Integration\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Clearsale\Integration\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">clearsale</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Clearsale\Integration\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
